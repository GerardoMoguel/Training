<Window x:Class="InventarioRestaurante.InicioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioRestaurante"
        mc:Ignorable="d"
        Title="BIENVENIDO" Height="214.229" Width="275.798" Background="#FF4E4E4E">
    <Grid>
        <Label x:Name="lbUsuario" Content="Usuario:" HorizontalAlignment="Left" Margin="22,28,0,0" VerticalAlignment="Top" Foreground="#FFD9D9D9" FontSize="16"/>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="32" Margin="127,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtUsuario_TextChanged" Background="#FF383838" Foreground="#FFBCBCBC" FontSize="14" TextAlignment="Center" SelectionBrush="#FFD1B3FF"/>
        <TextBox x:Name="txtContraseña" HorizontalAlignment="Left" Height="32" Margin="127,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtContraseña_TextChanged" Background="#FF383838" Foreground="#FFBCBCBC" FontSize="14" TextAlignment="Center" SelectionBrush="#FFD1B3FF"/>
        <Label x:Name="lbContra" Content="Contraseña:" HorizontalAlignment="Left" Margin="18,84,0,0" VerticalAlignment="Top" Foreground="#FFD9D9D9" FontSize="16" Width="104"/>
        <Button x:Name="btConfirmar" Content="Iniciar sesión" HorizontalAlignment="Center" Margin="0,137,0,0" VerticalAlignment="Top" Width="94" RenderTransformOrigin="-0.152,0.751" Click="btConfirmar_Click" Background="#FFD1B3FF" Height="27" Foreground="Black" FontFamily="Segoe UI Semibold"/>

    </Grid>
</Window>
