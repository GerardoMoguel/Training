<Window x:Class="InventarioRestaurante.AltaPlatillo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioRestaurante"
        mc:Ignorable="d"
        Title="AltaPlatillo" Height="527.6" Width="810.8" Background="#FF4E4E4E" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="lbId_Platillo" Content="ID" HorizontalAlignment="Left" Margin="39,144,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.26,-0.999" FontSize="14" Foreground="#FFDADADA" Height="29" Width="24"/>
        <Label x:Name="lbNombrePlatillo" Content="Nombre" HorizontalAlignment="Left" Margin="39,195,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#FFDADADA" Height="29" Width="65"/>
        <Label x:Name="lbPrecioPlatillo" Content="Precio" HorizontalAlignment="Left" Margin="39,246,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#FFDADADA" Height="29" Width="48"/>
        <Label x:Name="lbDescripcionPlat" Content="Descripcion" HorizontalAlignment="Left" Margin="39,299,0,0" VerticalAlignment="Top" FontSize="14" Foreground="#FFDADADA" Height="29" Width="82"/>
        <Label x:Name="lbIdRest" Content="Id_Restaurante" HorizontalAlignment="Left" Margin="39,350,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.469,-2.61" FontSize="14" Foreground="#FFDADADA" Height="29" Width="94"/>
        <TextBox x:Name="txtID_Platillo" HorizontalAlignment="Left" Height="29" Margin="164,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Background="#FF383838" FontSize="16" TextAlignment="Center" Foreground="#FFBCBCBC"/>
        <TextBox x:Name="txtNombrePlatillo" HorizontalAlignment="Left" Height="29" Margin="164,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" RenderTransformOrigin="-1.443,-1.675" Background="#FF383838" FontSize="16" Foreground="#FFBCBCBC" TextAlignment="Center"/>
        <TextBox x:Name="txtPrecioPlatillo" HorizontalAlignment="Left" Height="29" Margin="164,246,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Background="#FF383838" FontSize="16" TextAlignment="Center" Foreground="#FFBCBCBC"/>
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Height="29" Margin="164,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Background="#FF383838" Foreground="#FFBCBCBC" TextAlignment="Center"/>
        <TextBox x:Name="txtIdRest" HorizontalAlignment="Left" Height="29" Margin="164,350,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Background="#FF383838" FontSize="16" TextAlignment="Center" Foreground="#FFBCBCBC"/>
        <Button x:Name="btAltaPlatillo" Content="Alta" HorizontalAlignment="Left" Margin="195,422,0,0" VerticalAlignment="Top" Width="83" Click="btAltaPlatillo_Click" Height="34" Background="#FFFCFFB3" FontFamily="Segoe UI Semibold" FontSize="14"/>
        <Button x:Name="btn_atras" Content="Atras" HorizontalAlignment="Left" Margin="10,463,0,0" VerticalAlignment="Top" Width="66" Click="btn_atras_Click" Height="25" FontFamily="Segoe UI Light" Background="#FFD1B3FF"/>
        <ComboBox x:Name="cbListaIngredientes" HorizontalAlignment="Left" Margin="363,103,0,0" VerticalAlignment="Top" Width="170" Height="29" Background="#FF383838" BorderBrush="#FFFCFFB3" Foreground="#FF3A3A3A" FontSize="16" SelectionChanged="cbListaIngredientes_SelectionChanged"/>
        <DataGrid x:Name="dgDatosIngr" HorizontalAlignment="Left" Height="205" Margin="576,178,0,0" VerticalAlignment="Top" Width="187" Background="#FF383838" Foreground="#FF3A3A3A" BorderBrush="#FFABADB3" FontSize="16"/>
        <Label x:Name="lbIngredienes" Content="Ingredientes" HorizontalAlignment="Left" Margin="404,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.469,-2.61" FontSize="14" Foreground="#FFDADADA" Height="29" Width="86"/>
        <TextBox x:Name="tbCantidad" HorizontalAlignment="Left" Height="29" Margin="621,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" Foreground="#FFBCBCBC" Background="#FF383838" FontSize="16" TextAlignment="Right"/>
        <Label x:Name="lbCatidad" Content="Cantidad" HorizontalAlignment="Left" Margin="632,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.469,-2.61" Height="29" FontSize="14" Foreground="#FFDADADA" Width="66"/>
        <Label x:Name="lbCatidad_Copy" Content="Ingredientes por agregar" HorizontalAlignment="Left" Margin="589,143,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.469,-2.61" Height="30" Width="174" FontSize="14" Foreground="#FFDADADA"/>
        <Button x:Name="btnAgregaIngrediente" Content="Agregar Ingrediente" HorizontalAlignment="Left" Margin="597,422,0,0" VerticalAlignment="Top" Width="149" Height="34" Click="Button_Click" Background="#FFFFCCB3" FontFamily="Segoe UI Semibold" FontSize="14"/>
        <Label x:Name="lbIngredienes_Copy" Content="Datos" HorizontalAlignment="Left" Margin="216,69,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.469,-2.61" FontSize="14" Foreground="#FFDADADA" Height="58" Width="54"/>
        <Label x:Name="lbId_Restaurante_Copy" Content="Alta de platillo." HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Height="43" Foreground="#FFDADADA" Margin="341,21,0,0" FontFamily="Segoe UI Semibold"/>

    </Grid>
</Window>
